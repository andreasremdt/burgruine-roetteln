---
import clsx from "clsx";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  variant?: "primary" | "secondary";
}

const { variant = "primary", ...props } = Astro.props;
---

<button
  type="submit"
  class={clsx(
    "inline-flex items-center px-4 h-12 uppercase font-sans text-sm font-medium cursor-pointer transition-colors rounded-sm",
    {
      "bg-neutral-900 text-white hover:bg-neutral-700 focus-visible:bg-neutral-700":
        variant === "primary",
      "bg-white text-neutral-900 hover:bg-neutral-100 focus-visible:bg-neutral-100":
        variant === "secondary",
    },
  )}
  {...props}><slot /></button
>
