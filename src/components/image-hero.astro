---
import { Image } from "astro:assets";
import Container from "./container.astro";
import background from "../assets/images/main-hero.webp";
---

<section class="bg-primary-50 relative -mt-32 h-[75vh] max-h-96">
  <Image
    src={background}
    alt=""
    width={1920}
    height={500}
    format="webp"
    role="presentation"
    class="absolute inset-0 h-full w-full object-cover"
  />

  <Container class="relative flex h-full items-end justify-center">
    <h1 class="mb-16 text-5xl text-neutral-900"><slot /></h1>
  </Container>
</section>
