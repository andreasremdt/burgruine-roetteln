---
import clsx from "clsx";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"input"> {}

const { class: className, type = "text", ...props } = Astro.props;
---

<input
  type={type}
  class={clsx(
    "h-12 w-full rounded-sm border font-sans border-neutral-300 px-4 hover:border-neutral-400 focus-visible:border-neutral-400 transition-colors",
    className,
  )}
  {...props}
/>
