---
import { Image } from "astro:assets";
import Container from "../../components/container.astro";
import image from "../../assets/images/burg-turm-fahne.jpg";
import Button from "../../components/button.astro";

interface Props {
  type: string;
}

const { type } = Astro.props;
---

<section class="bg-primary-50 pb-24 lg:pb-40">
  <Container class="relative grid grid-cols-2 gap-16">
    <figure class="col-span-2 md:col-span-1">
      <Image
        src={image}
        alt=""
        width={600}
        height={600}
        loading="eager"
        format="webp"
        decoding="async"
        class="mb-1 aspect-square rounded-sm object-cover"
      />
      <figcaption class="font-sans font-medium">
        Der gro√üe Burgturm kann erklommen werden.
      </figcaption>
    </figure>

    <div class="col-span-2 md:col-span-1">
      <slot />

      <Button href={`/fuehrungen/reservieren?type=${encodeURIComponent(type)}`}
        >Jetzt reservieren &rarr;</Button
      >
    </div>
  </Container>
</section>
