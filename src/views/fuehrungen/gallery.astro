---
import { Image } from "astro:assets";
import Container from "../../components/container.astro";
import image1 from "../../assets/images/aussicht.jpg";
import image2 from "../../assets/images/burg-eingang.jpg";
import image3 from "../../assets/images/burg-tor.jpg";
import image4 from "../../assets/images/burg-turm-fahne.jpg";
---

<section class="py-24 lg:py-40">
  <Container>
    <h2 class="mb-12 text-5xl text-neutral-900">
      Impressionen unserer Führungen
    </h2>

    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      <figure>
        <Image
          src={image1}
          alt=""
          width={300}
          height={300}
          loading="lazy"
          decoding="async"
          format="webp"
          class="mb-1 aspect-square w-full rounded-sm object-cover"
        />
        <figcaption class="font-sans font-medium">
          Platzhalter-Text für dieses Bild
        </figcaption>
      </figure>
      <figure>
        <Image
          src={image2}
          alt=""
          width={300}
          height={300}
          loading="lazy"
          decoding="async"
          format="webp"
          class="mb-1 aspect-square w-full rounded-sm object-cover"
        />
        <figcaption class="font-sans font-medium">
          Platzhalter-Text für dieses Bild
        </figcaption>
      </figure>
      <figure>
        <Image
          src={image3}
          alt=""
          width={300}
          height={300}
          loading="lazy"
          decoding="async"
          format="webp"
          class="mb-1 aspect-square w-full rounded-sm object-cover"
        />
        <figcaption class="font-sans font-medium">
          Platzhalter-Text für dieses Bild
        </figcaption>
      </figure>
      <figure>
        <Image
          src={image4}
          alt=""
          width={300}
          height={300}
          loading="lazy"
          decoding="async"
          format="webp"
          class="mb-1 aspect-square w-full rounded-sm object-cover"
        />
        <figcaption class="font-sans font-medium">
          Platzhalter-Text für dieses Bild
        </figcaption>
      </figure>
    </div>
  </Container>
</section>
